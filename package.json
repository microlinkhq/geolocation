    "email": "hello@microlink.io",
    "name": "microlink.io",
    "url": "https://microlink.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/geolocation.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/geolocation/issues"
  },
  "keywords": [
    "api",
    "geolocation",
    "microlink"
  ],
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-toast": "^1.2.13",
    "cities.json": "~1.1.50",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cobe": "latest",
    "countries-list": "~3.1.1",
    "currency-codes": "github:osdiab/currency-codes",
    "geokdbush": "~2.0.1",
    "is-european": "~1.0.8",
    "is-ip": "~5.0.1",
    "iso-3166": "~4.3.0",
    "kdbush": "~4.0.2",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@types/geokdbush": "~1.1.5",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "async-listen": "latest",
    "ava": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "nano-staged": "latest",
    "postcss": "^8",
    "simple-git-hooks": "latest",
    "tailwindcss": "4",
    "ts-standard": "latest",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "next build",
    "build:data": "node scripts/postinstall.js",
    "contributors": "(npx git-authors-cli && npx finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "dev": "next dev",
    "lint": "next lint",
    "postinstall": "npm run build:data",
    "prerelease": "npm run update:check && npm run contributors",
    "start": "next start",
    "test": "ava"
  },
  "private": true,
  "license": "MIT",
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/helpers.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "nano-staged": {
    "*.ts": [
      "ts-standard --fix"
    ],
    "package.json": [
      "finepack"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx nano-staged"
  },
  "type": "module"
}
